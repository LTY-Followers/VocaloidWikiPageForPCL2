{
    "TextWrap":{
        "Warps":[
            {
                "format":"LF",
                "code":"\n"
            },
            {
                "format":"XAML",
                "code":"&#xA;"
            }
        ]    
    },
    "Card":{
        "id":"local:MyCard",
        "Usage":"<${id} ${arguments}> ${TextWrap:LF} ${control} ${TextWrap:LF} </${id}>",
        "arguments":{
            "title":{
                "Usage":"Title=${data}",
                "datatype":"String",
                "Valid":["any"]
            },
            "weight":{
                "Usage":"Weight=${data}",
                "datatype":"Int",
                "Valid":["any"]
            },
            "height":{
                "Usage":"Height=${datatype}",
                "datatype":"Int",
                "Valid":["any"]
            },
            "canswap":{
                "Usage":"CanSwap=${data}",
                "datatype":"String<Boolean>",
                "Valid":["True","False"]
            },
            "isswaped":{
                "Usage":"IsSwaped=${data}",
                "datatype":"String<Boolean>",
                "Valid":["True","False"]
            }
        }
    },
    "local:MyCard":{
        "alias":"Card"
    },
    "MyCard":{
        "alias":"Card"
    },
    "TextBlock":{
        "id":"TextBlock",
        "Usage":"<$id ${arguments} />",
        "arguments":{
            "Text":{
                "Usage":"Text=${data}",
                "datatype":"String",
                "Valid":["any"]
            },
            "TextWrapping":{
                "Usage":"TextWrapping=${data}",
                "datatype":"String",
                "Valid":["NoWrap","Wrap","WrapWithOverflow"]
            }
        }
    }
}